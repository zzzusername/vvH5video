<script>
	import $ from "jquery";
    import axios from "axios";
    /* 展示弹窗样式文件 */
    import '../../style/common.css' /*引入公共样式*/
	// js
	import {heightAuto} from '../../untils/heightAuto' //注意路径
	/* api */
	import {
			conferenceList,conferenceDelete,conferenceGet,conferenceEnd,listAllcameraTypes,listAllcameraStatus,listAlltype
			} from '../../api/meetinglist'

	export default {
        data() {
			return {
				creator_name_or_phonenum : '',
				// 会议方式
                cameraTypesdata : [],
				cameraTypesvalue: '',
				// 会议状态
                cameraStatusdata : [],
				cameraStatusvalue: '',
				// 所有会议类型
                cameraAlltypesData : [],
				cameraAlltypesValue: '',
				// 会议列表数据
				meetingListdata : [],
				// 详情数据
				detailData : {},
				detailPop : false,
				/* 分页相关 */
				page_size : 10,			//  请求多少条目
				page_total_items : 10,  // 总条数
				page_total_pages : 1,  //  当前条数
			}
		},
		mounted: function() {
			let row = '.videoshareList'
			heightAuto(row)
			// 初始化列表
			this.getInitlistData();
			// 初始化类型
			this.getInitcameraTypes();
			// 初始化方式
			this.getInitcameraStatus();
			// 初始化状态
			this.getInitallType();
		},
		methods:{
			// conferenceList
			getInitlistData(){
				let objData = {
					"enterprise_id": localStorage.EnterpriseId,
                    "page_number": this.page_total_pages - 1,
                    "page_size": this.page_size,
				}
				// 输入名字或者电话
				if(this.creator_name_or_phonenum != ''){
					objData.creator_name_or_phonenum = this.creator_name_or_phonenum;
				}
				// 会议方式
				if(this.cameraTypesvalue != ''){
					objData.camera_type = this.cameraTypesvalue;
				}
				// 会议状态
				if(this.cameraStatusvalue != ''){
					objData.status = this.cameraStatusvalue;
				}
				// 会议状态
				if(this.cameraAlltypesValue != ''){
					objData.type = this.cameraAlltypesValue;
				}

				conferenceList(objData).then(res => {
					if (res.status === 200 && res.data.result == "ok") {
						console.log(res);
						this.meetingListdata = res.data.data.list

						/* 总条数 */
						this.page_total_items = res.data.data.page_total_items; 
						this.page_total_pages = res.data.data.page_number - 0 + 1;
					}
				});	
			},
			// 会议方式
			getInitcameraTypes(){
				let objData = {}
				listAllcameraTypes(objData).then(res => {
					if (res.status === 200 && res.data.result == "ok") {
						this.cameraTypesdata = res.data.data
					}
				});	
			},
			//  会议状态
			getInitcameraStatus(){
				let objData = {}
				listAllcameraStatus(objData).then(res => {
					if (res.status === 200 && res.data.result == "ok") {
						this.cameraStatusdata = res.data.data;
					}
				});	
			},
			//  会议类型
			getInitallType(){
				let objData = {}
				listAlltype(objData).then(res => {
					if (res.status === 200 && res.data.result == "ok") {
						this.cameraAlltypesData = res.data.data;
					}
				});	
			},
			// 查询
			findDataclick(){
				// 
				this.page_total_pages = 1;
				this.getInitlistData();
			},
			// 清空
			clearDataclick(){
				console.log('清空数据')
				this.creator_name_or_phonenum = '';

				this.cameraTypesvalue = ''
				this.cameraStatusvalue = ''
				this.cameraAlltypesValue = ''

				this.page_total_pages = 1;
				this.getInitlistData();
			},
			// 详情
			detailClick(scope){
				console.log(scope)
				// 查询详情
				let objData = {
					"id" : scope.id
				}
			/* 	conferenceGet(objData).then(res => {
					if (res.status === 200 && res.data.result == "ok") {
						console.log(res);
						this.detailData = res.data.data;
						this.detailPop = true;
					}
				});	 */
				this.detailPop = true;
			},	
			// 删除会议
			meetingDelclick(scope){
				let objData = {
					"conference_id" : scope.id,
					"operator_id" : localStorage.userId
				}
				this.$confirm('是否删除会议?', '提示', {
						confirmButtonText: '确定',
						cancelButtonText: '取消',
						type: 'warning'
					}).then(() => {
						conferenceDelete(objData).then(res => {
							if (res.status === 200 && res.data.result == "ok") {
								
								this.$message({
									type: 'success',
									message: '删除成功!'
								});
								// 更新数据
								this.getInitlistData();
								
							}else{
								// 错误提示信息
								this.$message.error(res.data.error_description);
							}
						});	
					}).catch(() => {
						this.$message({
							type: 'info',
							message: '已取消删除'
						});          
					});
			},
			// 结束会议
			meetingEndclick(scope){
				let objData = {
					"conference_id" : scope.id,
					"operator_id" : localStorage.userId
				}
				this.$confirm('是否终止会议?', '提示', {
						confirmButtonText: '确定',
						cancelButtonText: '取消',
						type: 'warning'
					}).then(() => {
						conferenceEnd(objData).then(res => {
							if (res.status === 200 && res.data.result == "ok") {
								
								this.$message({
									type: 'success',
									message: '终止成功!'
								});
								// 更新数据
								this.getInitlistData();
								
							}else{
								// 错误提示信息
								this.$message.error(res.data.error_description);
							}
						});	
					}).catch(() => {
						this.$message({
							type: 'info',
							message: '已取消终止'
						});          
					});
			},
			// page
			handleCurrentChange(currentPage) {
				this.page_total_pages = currentPage;
				this.getInitlistData();
			},
        }
	}
	
</script>
